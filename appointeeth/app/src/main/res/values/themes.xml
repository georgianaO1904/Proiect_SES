<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppoinTeeth" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_blue</item>
        <item name="colorPrimaryVariant">@color/button_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_blue</item>
        <item name="android:actionBarStyle">@style/ProjActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/ProjActionBar.TitleTextStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ProjActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/ProjActionBar.TitleTextStyle</item>
    </style>

    <style name="ProjActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nunito_sans</item>
    </style>

    <style name="Theme.AppoinTeeth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppoinTeeth.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppoinTeeth.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>